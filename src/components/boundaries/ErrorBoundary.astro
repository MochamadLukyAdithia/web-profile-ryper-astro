---
/**
 * ErrorMessage.astro
 *
 * Komponen untuk menampilkan pesan error dengan title dan description.
 * Digunakan untuk menampilkan error state pada berbagai halaman.
 *
 * Props:
 * - title: string — judul error (opsional, default: "Terjadi Kesalahan")
 * - message: string — pesan error yang akan ditampilkan
 * - showIcon?: boolean — menampilkan icon error (default: true)
 */

export interface Props {
  title?: string;
  message: string;
  showIcon?: boolean;
}

const { 
  title = "Terjadi Kesalahan", 
  message, 
  showIcon = true 
} = Astro.props;
---

<div class="error-message-container flex flex-col items-center justify-center py-12 px-6 min-h-[300px]">
  <div class="error-content max-w-md text-center">
    {showIcon && (
      <div class="mb-4">
        <svg 
          class="w-16 h-16 mx-auto text-red-500 drop-shadow-md" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"
          ></path>
        </svg>
      </div>
    )}
    
    <h2 class="text-xl font-semibold text-gray-200 mb-3 shadow-sm">
      {title}
    </h2>
    
    <p class="text-gray-400 leading-relaxed">
      {message}
    </p>
    
    <div class="mt-6">
      <button 
        onclick="window.location.reload()" 
        class="px-6 py-2 bg-[#002C4B] hover:bg-[#02416e] text-white rounded-lg transition-colors cursor-pointer hover:translate-y-[-1px] hover:shadow-lg hover:shadow-blue-900/30"
      >
        Coba Lagi
      </button>
    </div>
  </div>
</div>
