---
import { formatWIB } from '@/utils/formatter/time_formatter';
import type { BlogType } from '@/types/models/blog-type';

/**
 * BlogHeader.astro
 *
 * Komponen header untuk menampilkan metadata dan judul blog.
 * Menampilkan tanggal publikasi, kategori, dan judul blog.
 *
 * Props:
 * - blog: BlogType — Data blog yang akan ditampilkan
 */

export interface Props {
  blog: BlogType;
}

const { blog } = Astro.props;
---

<div class="space-y-4">
  <div class="flex items-center gap-3 text-sm text-gray-400 flex-wrap">
    <time datetime={blog.createdAt} class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 002 2v12a2 2 0 002 2z"/>
      </svg>
      {formatWIB(blog.createdAt)}
    </time>
    <span class="text-gray-600">•</span>
    <span class="inline-flex items-center px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-xs font-medium uppercase tracking-wide">
      {blog.category}
    </span>
  </div>
  
  <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight text-white">
    {blog.judul}
  </h1>
</div>
