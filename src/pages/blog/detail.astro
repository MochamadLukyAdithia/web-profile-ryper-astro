---
import Layout from '../../layouts/Layout.astro';
import "../../styles/blog-detail.css";

let post = null;

if (typeof window !== "undefined") {
  const storedPost = localStorage.getItem("selectedPost");
  if (storedPost) {
    post = JSON.parse(storedPost);
  }
}
---
<Layout showHeader={false} showFooter={false}>
<div class="fixed top-6 left-6 z-50 hidden sm:block">
  <button
    onclick="history.back()"
    class="back-button backdrop-blur-md cursor-pointer bg-white/10 px-6 py-3 rounded-2xl text-sm font-medium text-white hover:bg-white/20 flex items-center gap-2 shadow-lg"
  >
    <svg
      class="w-4 h-4"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 19l-7-7m0 0l7-7m-7 7h18"
      />
    </svg>
    Kembali
  </button>
</div>

    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div id="detailContainer" class="space-y-8"></div>
    </main>
    <script type="module" src="/src/scripts/detail.js" defer></script>
</Layout>
