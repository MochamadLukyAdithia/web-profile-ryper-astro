---
/**
 * BlogGrid.astro
 *
 * Section grid untuk menampilkan kumpulan posting blog menggunakan BlogCard.
 * Bertanggung jawab mengatur layout grid; isi kartu didelegasikan ke BlogCard.
 *
 * Props:
 * - posts: BlogType[] â€” daftar posting untuk ditampilkan
 */

import type { BlogType } from '@/types/models/blog-type';
import BlogCard from './BlogCard.astro';

interface Props {
  posts: BlogType[];
}

const { posts } = Astro.props as Props;
---
<section
  id="blog-grid"
  class="grid grid-cols-1  md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12 bg-red-500"
>
  {posts.map((post) => (
    <BlogCard post={post} />
  ))}
  {posts.length === 0 && (
    <div class="col-span-full text-center text-gray-400">Tidak ada postingan yang cocok.</div>
  )}
</section>
