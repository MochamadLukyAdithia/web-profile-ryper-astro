---
/**
 * NotFoundError.astro
 *
 * Komponen untuk menampilkan pesan error ketika konten tidak ditemukan.
 * Digunakan sebagai fallback UI ketika ID tidak valid atau data tidak tersedia.
 *
 * Props:
 * - message: string (optional) â€” pesan error yang akan ditampilkan
 */

interface Props {
  message?: string;
}

const { message = "ID tidak ditemukan" } = Astro.props;
---

<div class="text-center py-16">
  <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
    </svg>
  </div>
  <p class="text-gray-400 text-lg">{message}</p>
</div>
