---
/**
 * BlogCard.astro
 *
 * Kartu individual untuk menampilkan ringkasan sebuah posting blog.
 * Bertanggung jawab menampilkan gambar, kategori, judul, tanggal, dan deskripsi ringkas.
 *
 * Props:
 * - post: BlogType â€” data posting yang akan ditampilkan
 */

import type { BlogType } from '@/types/models/blog-type';
import { hashId } from '@/utils/encrypt/hash-id';
import { formatWIB } from '@/utils/formatter/time_formatter';

interface Props {
  post: BlogType;
}

const { post } = Astro.props as Props;
---
<div class="blog-card rounded-2xl overflow-hidden fade-in cursor-pointer transition-transform hover:scale-[1.02]">
  <a href={`/blog/detail?id=${hashId(post.id)}`} class="block">
    <div class="image-wrapper relative">
      <img src={post.gambar} alt="Blog Image" />
      <div class="category-badge absolute top-2 right-2 bg-white text-black px-3 py-1 text-xs font-semibold rounded-full shadow">{post.category}</div>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold mb-3 line-clamp-2 text-black hover:text-blue-400 transition-colors">
        {post.judul}
      </h3>
      <p class="text-black text-sm mb-4">{formatWIB(post.createdAt)}</p>
      <p class="text-black text-sm leading-relaxed line-clamp-6">{post.deskripsi}</p>
    </div>
  </a>
</div>
